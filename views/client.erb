<div class="top-heading">
  <h1>Client: <%= @client.name() %></h1>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <h3><%= @client.name() %>'s deets</h3>
        <th>Client Name</th><th>Gender</th><th>Phone Number</th>
          <tr>
            <td><%= @client.name() %></td>
            <td><%= @client.gender() %></td>
            <td><%= @client.phone_number() %></td>
          </tr>
      </table>
    </div>
    <h4>You can make updates with the form below</h4>
    <form action="/clients/<%= @client.id() %>" method="post">
      <input type='hidden' name="_method" value="patch">
      <div class="form-group">
        <label for="name">Update Client Name</label>
        <input class="form-control" type="text" name="name" id="name">
      </div>
      <div class="form-group">
        <label for="name">Update Client Gender</label>
        <input class="form-control" type="text" name="gender" id="gender">
      </div>
      <div class="form-group">
        <label for="name">Update Client Phone Number</label>
        <input class="form-control" type="text" name="phone_number" id="phone_number">
      </div>
      <button class="btn btn-primary" type="submit">Update</button>
    </form>
  </div>
  <div class="col-md-6">
    <img class="img-responsive img-rounded" src="/img/client.png" alt="drawing of an appointment book with no entries">
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <a href="/">
      <div class="home-link">
        <h1>Take me Back to the Main Page</h1>
      </div>
    </a>
  </div>
</div>
