<div class="top-heading">
  <h1>Add a new Stylist</h1>
</div>
<div class="row">
  <div class="col-md-6">
    <form action="/stylists<%= @stylist.id %>" method="post">
      <div class="form-group">
        <label for="name">Stylist Name</label>
        <input class="form-control" type="text" name="name" id="name">
      </div>
      <div class="form-group">
        <label for="specialty">Stylist Specialty</label>
        <input class="form-control" type="text" name="specialty" id="specialty">
      </div>
      <button class="btn btn-primary" type="submit">Add Stylist</button>
    </form>
  </div>
  <div class="col-md-6">
    <img src="/img/scissors-comb.png" alt="illustration of scissors and a comb">
  </div>
</div>
